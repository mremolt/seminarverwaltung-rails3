<h1>Listing benutzer</h1>

<%= form_tag({:action => :index}, :method => :get) do %>
  <%= text_field_tag :search_for %>
  <%= submit_tag "Suche" %>
<% end %>

<%= table_for @benutzer do |t|
  t.data :actions => :all do
    t.data :anrede, :vorname, :name, :email
  end
end %>

<%= will_paginate @benutzer %>

<%= link_to 'New Benutzer', new_benutzer_path %>
